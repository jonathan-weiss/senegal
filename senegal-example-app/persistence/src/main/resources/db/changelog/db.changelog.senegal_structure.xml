<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="book_structure" author="Senegal">
        <createTable tableName="AUTHOR">
            <column name="ID" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="FIRSTNAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="LASTNAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="BOOK">
            <column name="ID" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="BOOK_NAME" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="MAIN_AUTHOR_ID" type="uuid">
                <constraints nullable="false" foreignKeyName="BOOK_FK_AUTHOR_ID" referencedTableName="AUTHOR" referencedColumnNames="ID"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
