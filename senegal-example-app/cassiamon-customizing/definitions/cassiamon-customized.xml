<?xml version="1.0" encoding="utf-8" ?>
<cassiamon xmlns="https://cassiamon.ch/cassiamon-schemagic"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://cassiamon.ch/cassiamon-schemagic ./schema/cassiamon-schemagic-schema.xsd">
    <definitions>
        <entity entityName="Person" conceptIdentifier="Person">
            <primaryKeyField fieldName="personNo" fieldDataType="UUID" conceptIdentifier="Person_personNo"/>
            <dataOnlyField fieldName="firstname" fieldDataType="TEXT"/>
            <dataOnlyField fieldName="lastname" fieldDataType="TEXT"/>
            <dataOnlyField fieldName="nickname" fieldDataType="TEXT"/>
            <primaryKeyReferenceField fieldName="address" fieldDataType="UUID" referencedPrimaryKeyField="Person_personNo"/>
        </entity>
        <entity entityName="Address" conceptIdentifier="Address">
            <primaryKeyField fieldName="addressNo" fieldDataType="UUID"/>
            <dataOnlyField fieldName="street" fieldDataType="TEXT"/>
            <dataOnlyField fieldName="zip" fieldDataType="TEXT"/> <!-- TODO Change back to IntegerNumber as soon as this is supported -->
        </entity>
        <entity entityName="Department">
            <primaryKeyField fieldName="departmentNo" fieldDataType="UUID"/>
            <dataOnlyField fieldName="title" fieldDataType="TEXT"/>
        </entity>
        <entity entityName="DepartmentAddress">
            <primaryKeyField fieldName="departmentAddressNo" fieldDataType="UUID"/>
            <dataOnlyField fieldName="street" fieldDataType="TEXT"/>
            <dataOnlyField fieldName="phone" fieldDataType="TEXT"/> <!-- TODO Change back to IntegerNumber as soon as this is supported -->
        </entity>
    </definitions>

</cassiamon>
